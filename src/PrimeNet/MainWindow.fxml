<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PrimeNet.Controller">
    <stylesheets>
        <URL value="@Design.css" />
    </stylesheets>
    <top>
        <VBox prefHeight="246.0" prefWidth="780.0" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="24.0" prefWidth="731.0" spacing="10.0">
                    <children>
                        <TextField fx:id="searchField" onAction="#onEnter" promptText="Suche" />
                        <ComboBox fx:id="yearComboBox" onAction="#clickYearComboBox" prefWidth="150.0" promptText="Jahr" />
                        <ComboBox fx:id="categoriesComboBox" prefWidth="150.0" promptText="Kategorien" />
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <Button fx:id="favouriteButton" mnemonicParsing="false" onAction="#clickFavourite" prefHeight="30.0" prefWidth="90.0" text="Favoriten" />
                        <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="90.0" text="Merkliste" />
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="85.0" prefWidth="800.0">
                    <children>
                        <Region prefHeight="61.0" prefWidth="385.0" />
                        <ProgressIndicator fx:id="progressbar" progress="0.0" />
                        <Region prefHeight="61.0" prefWidth="380.0" />
                    </children>
                </HBox>
              <TableView fx:id="filmTable" editable="true" prefHeight="181.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            </children>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
        </VBox>
    </top>
   <center>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <VBox>
               <children>
                          <Label fx:id="previewTitle" alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="35.0" prefWidth="631.0" text="Filmtitel" textAlignment="CENTER">
                              <font>
                                  <Font name="System Bold" size="24.0" />
                              </font>
                          </Label>
                  <Region prefHeight="10.0" />
                          <Label fx:id="previewDate" alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="627.0" text="(Jahr)" textAlignment="CENTER">
                              <font>
                                  <Font size="14.0" />
                              </font>
                          </Label>
                  <Region prefHeight="20.0" />
                          <Label alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="23.0" prefWidth="626.0" text="Handlung" textAlignment="CENTER" underline="true">
                              <font>
                                  <Font size="18.0" />
                              </font>
                          </Label>
                  <Region prefHeight="10.0" />
                          <Label fx:id="previewOverview" alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="242.0" prefWidth="633.0" text="Handlungstext" textAlignment="CENTER" wrapText="true" />
               </children>
            </VBox>
            <VBox alignment="TOP_RIGHT" nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                      <ImageView fx:id="previewPane" fitHeight="317.0" fitWidth="183.0" preserveRatio="true" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</BorderPane>
