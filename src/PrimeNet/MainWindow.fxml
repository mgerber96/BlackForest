<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PrimeNet.Controller">
    <stylesheets>
        <URL value="@Design.css" />
    </stylesheets>
    <top>
        <VBox prefHeight="122.0" prefWidth="731.0" BorderPane.alignment="CENTER">
            <children>
                <TitledPane animated="false" prefHeight="36.0" prefWidth="731.0" text="PrimeNet">
                    <font>
                        <Font name="System Bold Italic" size="18.0" />
                    </font>
                </TitledPane>
                <HBox prefHeight="24.0" prefWidth="731.0" spacing="10.0">
                    <children>
                        <TextField fx:id="searchField" onAction="#onEnter" promptText="Suche" />
                  <ComboBox fx:id="yearComboBox" onAction="#clickYearComboBox" prefWidth="150.0" promptText="Jahr" />
                        <ComboBox fx:id="categoriesComboBox" prefWidth="150.0" promptText="Kategorien" />
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <Button fx:id="favouriteButton" mnemonicParsing="false" onAction="#clickFavourite" text="Favoriten" />
                        <Button mnemonicParsing="false" text="Merkliste" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                    </VBox.margin>
                </HBox>
            <HBox prefHeight="40.0" prefWidth="458.0">
               <children>
                  <Region prefHeight="40.0" prefWidth="105.0" />
                  <ProgressIndicator fx:id="progressbar" progress="0.0" />
               </children>
            </HBox>
            </children>
        </VBox>
    </top>
    <left>
        <TableView fx:id="filmTable" BorderPane.alignment="CENTER_LEFT" />
    </left>
   <right>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="214.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="previewPane" fitHeight="239.0" fitWidth="180.0" preserveRatio="true" />
         </children>
      </VBox>
   </right>
   <center>
      <VBox prefHeight="348.0" prefWidth="0.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="51.0" prefWidth="270.0">
               <children>
                  <Label prefHeight="54.0" prefWidth="108.0" text="Label" />
                  <Region prefHeight="51.0" prefWidth="49.0" />
                  <Label prefHeight="81.0" prefWidth="122.0" text="Label" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
