<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PrimeNet.ControllerForLogin">
   <stylesheets>
      <URL value="@Design.css" />
   </stylesheets>
   <children>
      <HBox layoutX="43.0" layoutY="226.0" prefHeight="43.0" prefWidth="201.0">
         <children>
            <Button mnemonicParsing="false" onAction="#Login" prefHeight="27.0" prefWidth="89.0" text="Login" />
            <Region prefHeight="43.0" prefWidth="36.0" />
            <Button mnemonicParsing="false" onAction="#Reset" prefHeight="28.0" prefWidth="96.0" text="Reset" />
         </children>
      </HBox>
      <VBox layoutX="42.0" layoutY="14.0" prefHeight="166.0" prefWidth="201.0">
         <children>
            <Label fx:id="LabelStatus" maxHeight="23.0" maxWidth="500.0" minHeight="23.0" minWidth="56.0" prefHeight="23.0" prefWidth="181.0" text="Login Status" textAlignment="CENTER" textFill="#24545c">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Region prefHeight="150.0" prefWidth="201.0" />
            <TextField fx:id="TextUserName" prefHeight="28.0" prefWidth="0.0" promptText="Benutzername">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Region prefHeight="100.0" prefWidth="201.0" />
            <PasswordField fx:id="TextPassword" promptText="Password">
               <font>
                  <Font size="14.0" />
               </font>
            </PasswordField>
         </children>
      </VBox>
   </children>
</AnchorPane>
